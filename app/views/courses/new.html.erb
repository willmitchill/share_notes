<h1>Add a course</h1>

<h2>Submit a Course!</h2>
<%= form_for @course, url: university_courses_path do |f| %>
  <div>
    <%= f.label "name" %><br>
    <%= f.text_field "name" %>
  </div>
  <div>
    <%= f.label "course number" %><br>
    <%= f.number_field "course_number" %>
  </div>
  <div>
    <%= f.label "department" %><br>
    <%= f.text_field "department" %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>
