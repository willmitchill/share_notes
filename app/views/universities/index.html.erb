<h1>Welcome to Note Share!</h1>


<%= form_tag(universities_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Universities" %>
    <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
         of using a Rails form helper -->
    <%= submit_tag "Search", :name => nil %>
  </div>
<% end %>


<p></p>
<% @universities.each do |university| %>
  <div>
    <h2><%= link_to university.name, university_path(university) %></h2>
    <p><%= university.city %><p>
  </div>
<% end %>


<% if current_user != nil && current_user.admin = true %>
  <%= link_to "Admin Table", admin_users_path %>
<% end %>
